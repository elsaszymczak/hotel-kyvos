<div class="container">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="booking-h2">
      <h2><%= @room.name %></h2>
      <div class="booking-form">
        <div class="booking-date-picker">
          <p>Select a date</p>
          <div id="inner-form">
            <%= simple_form_for [@room, @booking], remote: true do |f| %>
              <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.submit "Confirm booking", class: "btn btn-primary btn-lg in_page" %>
            <% end %>

            <p><i class="fa fa-eur" aria-hidden="true"></i><%= @room.price %>â‚¬</p>
          </div>
        </div>
        <div class="booking-image">
          <%= image_tag @room.photo %>
        </div>
      </div>
    </div>
  </div>
</div>

