<div class="wrapper-image-pages height-vh">
<h1>KYVOS</h1>
<%= render 'shared/navbar' %>
<div class="container">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="booking-h2">
      <h2><%= @room.name %></h2>
      <div class="booking-form">
        <div class="booking-date-picker">
          <p>Sélectionnez vos dates</p>
          <div id="inner-form">
            <%= simple_form_for [@room, @booking], remote: true do |f| %>
              <%= f.input :starts_at, :label => "Arrivée", as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.input :starts_at, :label => "Départ", as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.submit "Confirmer", class: "btn button-black" %>
            <% end %>

<!--             <p><i class="fa fa-eur" aria-hidden="true"></i><%= @room.price %>€</p>
 -->          </div>
        </div>
        <div class="booking-image">
          <%= image_tag @room.photo %>
        </div>
      </div>
    </div>
  </div>
</div>

</div>


