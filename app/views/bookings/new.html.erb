<div class="container">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="booking-h2">
      <h2><%= @room.name %></h2>
      <div class= "booking-form">
        <div class="booking-date-picker">
          <p>Select a date</p>
          <div id="inner-form">
            <%= render "bookings/form", room: @room, booking: @booking %>
          </div>
        </div>
        <div class="booking-image">
          <%= image_tag @room.photo %>
        </div>
      </div>
    </div>
  </div>
</div>
